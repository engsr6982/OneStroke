{
  "manifest_version": 3,
  "name": "OneStroke",
  "version": "0.0.1",
  "description": "AI 划词总结 / AI 划词解释",
  "permissions": ["storage", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
